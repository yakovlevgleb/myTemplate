{
	"dirs": {
		"dev": "./dev",
		"dist": "./dist"
	},
	"dev": {
		"html": {
			"src": "./dev/pug/*.pug",
			"dest": "./dev"
		},
		"css": {
			"src": "./dev/styles/**/*.{scss, sass}",
			"dest": "./dev/assets/css"
		},
		"js": {
			"src": "./dev/scripts/scripts.js",
			"dest": "./dev/assets/js"
		},
		"jsLibs": {
			"src": "./dev/scripts/lib/*.js",
			"dest": "./dev/assets/js"
		}
	},
	"watch": {
		"pug": "./dev/pug/**/*.pug",
		"css": "./dev/styles/**/*.{scss, sass}",
		"js": "./dev/scripts/**/*.js",
		"html": "./dev/*.html"
	},
	"dist": {
		"img": {
			"src": "./dev/assets/img/**/*",
			"dest": "./dist/assets/img"
		},
		"html": {
			"src": "./dev/*.html",
			"dest": "./dist"
		},
		"css": {
			"src": "./dev/assets/css/*.css",
			"dest": "./dist/assets/css"
		},
		"js": {
			"src": "./dev/scripts/scripts.js",
			"dest": "./dist/assets/js"
		},
		"jsLibs": {
			"src": "./dev/scripts/lib/*.js",
			"dest": "./dist/assets/js"
		},
		"fonts": {
			"src": "./dev/assets/fonts/**/*.*",
			"dest": "./dist/assets/fonts"
		}
	}
}
